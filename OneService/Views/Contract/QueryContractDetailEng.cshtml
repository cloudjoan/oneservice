		//Ajax用中文或英文姓名查詢人員帳號
		function PeopleSearch() {
			$(".Peoploe").unbind();

			$(".Peoploe").koala({
				delay: 300,
				keyup: function (event) {
					if (event.keyCode != 13 && event.keyCode != 37 && event.keyCode != 38 && event.keyCode != 39 && event.keyCode != 40) {
						var keyword = $(this).val();
						if (keyword.length > 1) {
							var obj = $(this);
							var ojbID = $(this).attr("id");

							$.ajax({
								url: '@Url.Action("AjaxfindEmployeeByKeyword", "ServiceRequest")',
								type: 'post',
								dataType: 'json',
								data: {
									functionName: 'AjaxfindEmployeeByKeyword', keyword: keyword
								},
								success: function (result) {
									objects = [];
									$.each(result, function (i, idata) {
										objects[i] = {
											label: idata.CEmployeeCName + "\\" + idata.CEmployeeEname + "\\" + idata.CEmployeeErpid,
											idx: i,
											value: idata.CEmployeeErpid //value這個值，一定要在label裡才能顯示出下拉
										};
									});

									//綁定foucs事件
									obj.autocomplete({
										source: objects
									}).bind('focus', function () { obj.autocomplete("search"); });

									//開啟autocomplete選單
									obj.focus();
								}
							})

						}
					}
				}
			})
		}

		//編輯工程師明細內容
		function editTask(obj) {
			var strMsg = "";

			if (strMsg == "") {

				resetPopup("#dialog_task"); //執行紀錄popup各欄位reset
				var stateVal = $(obj).parent().parent().find('.taskState').text(); //狀態說明
				var state = stateVal == "進行中" ? "Progress" : stateVal == "延遲" ? "Delay" : stateVal == "已完成" ? "Close" : stateVal == "未開始" ? "NotYet" : stateVal == "取消" ? "Cancel" : "";
				var stair2No = $(obj).parent().parent().find('.taskNo').text().split('.')[1] == null ? "0" : $(obj).parent().parent().find('.taskNo').text().split('.')[1];
				var stair3No = $(obj).parent().parent().find('.taskNo').text().split('.')[2] == null ? "0" : $(obj).parent().parent().find('.taskNo').text().split('.')[2];
				var checkedHoliday = $(obj).parent().parent().find('.hidIncludeHoliday').val() == "Y" ? "Y" : "";

				//設定各欄位資料
				$("#hid_taskId").val($(obj).parent().parent().find('.hidTaskId').val()); //任務ID
				$("#ddl_taskBundleMs").val($(obj).parent().parent().find('.taskBundleMs').text()); //對應里程碑
				$("#ddl_stair1No").val($(obj).parent().parent().find('.taskNo').text().split('.')[0]); //主要任務編號
				$("#ddl_stair2No").val(stair2No); //次要任務編號
				$("#ddl_stair3No").val(stair3No); //第三階任務編號
				$("#txt_taskDesc").val($(obj).parent().parent().find('.taskDesc').text()); //工作任務
				$("#txt_tPreWork").val($(obj).parent().parent().find('.taskPreWork').text().trim()); //前置作業 edit by elvis 2022/07/28
				$("#txt_tExpStartDate").val($(obj).parent().parent().find('.taskExpStartD').text().trim()); //預計起始
				$("#txt_tExpEndDate").val($(obj).parent().parent().find('.taskExpEndD').text()); //預計完成
				$("#txt_tExpWorkHours").val($(obj).parent().parent().find('.taskExpWorkHours').text()); //預估工時
				$("#txt_tStartDate").val($(obj).parent().parent().find('.taskStartD').text()); //實際開始
				$("#txt_tEndDate").val($(obj).parent().parent().find('.taskEndD').text()); //實際完成
				$("#txt_tWorkHours").val($(obj).parent().parent().find('.taskWorkHours').text()); //實際工時
				$("#txt_tProgressPercentage").val($(obj).parent().parent().find('.taskProgressPercentage').text()); //進度% edit by elvis 2022/07/28
				$("#txt_tImpBy").val($(obj).parent().parent().find('.taskImpBy').text()); //負責人
				$("#ddl_taskState").val(state); //任務狀態
				$("#txt_tNote").val($(obj).parent().parent().find('.taskNote').text()); //備註 edit by elvis 2022/07/28

				//edit by elvis 2022/07/28 Start
				if (checkedHoliday == "Y") {
					$("#ckb_IncludeHoliday").prop('checked', true); //日曆天(含六、日)
					$("#ckb_NotIncludeHoliday").prop('checked', false); //工作天(不含六、日)
				}

				if (checkedHoliday == "N") {
					$("#ckb_NotIncludeHoliday").prop('checked', true); //工作天(不含六、日)
					$("#ckb_IncludeHoliday").prop('checked', false); //日曆天(含六、日)
				}
				//edit by elvis 2022/07/28 End

				//若為第一階任務，則工時自動統計
				if ($("#ddl_stair3No").val() == "0") {
					$("#txt_tExpWorkHours").attr('disabled', true);
					$("#txt_tWorkHours").attr('disabled', true);
				}
				else if ($("#ddl_stair2No").val() == "0") {
					$("#txt_tExpWorkHours").attr('disabled', true);
					$("#txt_tWorkHours").attr('disabled', true);
				}
				else {
					$("#txt_tExpWorkHours").attr('disabled', true);
					$("#txt_tWorkHours").attr('disabled', true);
				}

				$("#dialog_task .modal-content").css({ 'width': '110%' });
				$("#dialog_task").modal('show');
			}
		}

