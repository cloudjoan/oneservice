
@{
    ViewData["Title"] = "CreateWH";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@section breadcrumb_section{
	<div class="col-lg-10">
		<h2>工時查詢</h2>
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="#">工作管理</a>
			</li>
			<li class="breadcrumb-item active">
				<strong>工時查詢</strong>
			</li>
		</ol>
	</div>
}

	<div class="row">

		<div class="col-lg-12">
			<div class="ibox ">
				<div class="ibox-title">
					<h5>工時查詢</h5>
					<div class="ibox-tools">
						<a class="collapse-link">
							<i class="fa fa-chevron-up"></i>
						</a>
					</div>
				</div>
				<div class="ibox-content">
					<form name="form" action='#' method="post">
						<div class="form-group row">
							<label class="col-lg-2 col-form-label">同仁姓名：</label>
							<div class="col-lg-4"><input type="text" id="tbx_CustName" name="tbx_CustName" class="form-control" placeholder="姓名" required></div>
							<label class="col-lg-6 col-form-label">系統服務事業群 客戶服務處</label>
						</div>
						<div class="form-group row">
							<label class="col-lg-2 col-form-label">工時類型：</label>
							<div class="col-lg-4">
								<select class="form-control">
									<option value="A">A.客戶服務</option>
									<option value="B">B.專案導入</option>
									<option value="C">C.內部作業</option>
								</select>
							</div>
							<label class="col-lg-2 col-form-label"> 專案（商機）：</label>
							<div class="col-lg-4"><input type="text" id="tbx_CustName" name="tbx_CustName" class="form-control" placeholder="專案（商機）"></div>
						</div>
						<div class="form-group row">
							<label class="col-lg-2 col-form-label">時間起訖：</label>
							<div class="input-group m-b col-lg-5">
								<input type="text" class="form-control calendar" placeholder="開始日期">
								<div class="input-group-append">
									<span class="input-group-addon"> ~ </span>
								</div>
								<input type="text" class="form-control calendar" placeholder="結束日期">
							</div>
						</div>
						<!-- 檔案上傳start-->
						<div class="form-group row">
							<div class="col-lg-3 dropzone" id="zone_1">
								<div class="fallback">
									<input name="file" type="file" multiple />
								</div>
							</div>
							<div class="col-lg-9">
								<div class="attachment" id="filezone_1"></div>
								<input type="hidden" class="fileids" id="hid_filezone_1" />
							</div>
						</div>
						<!-- 檔案上傳end-->
						<div class="hr-line-dashed"></div>
						<button class="btn btn-success btn-lg" type="submit"><i class="fa fa-plus"></i> 儲 存 </button>
						<button class="btn btn-primary btn-lg" type="button" onclick="searchCust()">
							<i class="fa fa-search"></i> 查 詢
						</button>
					</form>
				</div>
			</div>
		</div>

		<div class="col-lg-12">
			<div class="ibox ">
				<div class="ibox-title">
					<h5>DataTable列表</h5>
					<div class="ibox-tools">
						<a class="collapse-link">
							<i class="fa fa-chevron-up"></i>
						</a>
					</div>
				</div>
				<div class="ibox-content" id="dataDiv">
					<table id="table1" class="table table-striple table-bordered table-hover dataTables-example">
						<thead>
							<tr>
								<th>姓名</th>
								<th>電話</th>
								<th>Email</th>
								<th width="130">刪除</th>
							</tr>
						</thead>
						<tbody>
						</tbody>
					</table>
				</div>
			</div>
		</div>

	</div>

