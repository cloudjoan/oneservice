
@{
	ViewData["Title"] = "CreateWH";
	Layout = "~/Views/Shared/_LayoutHome.cshtml";
	Dictionary<string, string> whTypeDict = new Dictionary<string, string>();
	Dictionary<string, string> actTypeDict = new Dictionary<string, string>();
	whTypeDict.Add("A", "A.客戶服務");
	whTypeDict.Add("B", "B.專案導入");
	whTypeDict.Add("C", "C.內部作業");
	whTypeDict.Add("D", "D.研發");
	whTypeDict.Add("E", "E.專業服務");

	actTypeDict.Add("A", "維修");
	actTypeDict.Add("B", "定維");
	actTypeDict.Add("C", "裝機");
	actTypeDict.Add("D", "會議");
	actTypeDict.Add("E", "開發/測試");
	actTypeDict.Add("F", "教育訓練");
	actTypeDict.Add("G", "文件整理");
	actTypeDict.Add("H", "前置準備");
}

@section js_section{
	<script>
		$(document).ready(function(){
			
		});

		function GetWHById(id) {
			$.ajax({
				url: '@Url.Action("GetWHById", "WorkingHours")',
				type:'post',
				dataType:'Json',
				data:{"id":id},
				success:function(result){
					$("#Id").val(result.id);
					$("#ddl_WHType").val(result.whtype);
					$("#ddl_ActType").val(result.actType);
					$("#tbx_CrmOppNo").val(result.crmOppNo);
					$("#tbx_WhDescript").val(result.whDescript);
					$("#tbx_StartTime").val(result.startTime);
					$("#tbx_EndTime").val(result.endTime);
				}
			})
		}

	</script>
}

@section breadcrumb_section{
	<div class="col-lg-10">
		<h2>工時登錄</h2>
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				<a href="#">工時登錄</a>
			</li>
			<li class="breadcrumb-item active">
				<strong>工時登錄</strong>
			</li>
		</ol>
	</div>
}

	<div class="row">

		<div class="col-lg-12">
			<div class="ibox ">
				<div class="ibox-title">
					<h5>工時登錄</h5>
					<div class="ibox-tools">
						<a class="collapse-link">
							<i class="fa fa-chevron-up"></i>
						</a>
					</div>
				</div>
				<div class="ibox-content">
					<form id="form" name="form" action='@Url.Action("SaveWH", "WorkingHours")' method="post">
						<input type="hidden" id="Id" name="Id" />
						<div class="form-group row">
							<label class="col-lg-2 col-form-label">同仁姓名：</label>
							<div class="col-lg-4">
								<input type="text" id="tbx_UserName" name="tbx_UserName" class="form-control" placeholder="姓名" value="黃國彰" required>
								<input type="hidden" id="hid_UserErpId" value="99120859" />
							</div>
							<label class="col-lg-6 col-form-label">系統服務事業群 客戶服務處</label>
						</div>
						<div class="form-group row">
							<label class="col-lg-2 col-form-label">工時類型：</label>
							<div class="col-lg-4">
								<select class="form-control" id="ddl_WHType" name="ddl_WHType">
									<option value="A">A.客戶服務</option>
									<option value="B">B.專案導入</option>
									<option value="C">C.內部作業</option>
									<option value="D">D.研發</option>
									<option value="E">E.專業服務</option>
								</select>
							</div>
							<label class="col-lg-2 col-form-label">任務活動：</label>
							<div class="col-lg-4">
								<select class="form-control" id="ddl_ActType" name="ddl_ActType">
									<option value="A">維修</option>
									<option value="B">定維</option>
									<option value="C">裝機</option>
									<option value="D">會議</option>
									<option value="E">開發/測試</option>
									<option value="F">教育訓練</option>
									<option value="G">文件整理</option>
									<option value="H">前置準備</option>
								</select>
							</div>
							
						</div>
						
						<div class="form-group row">
							<label class="col-lg-2 col-form-label"> 專案（商機）：</label>
							<div class="col-lg-4"><input type="text" id="tbx_CrmOppNo" name="tbx_CrmOppNo" class="form-control" placeholder="專案（商機）"></div>
						</div>

						<div class="form-group row">
							<label class="col-lg-2 col-form-label"> 工作說明：</label>
							<div class="col-lg-5">
								<textarea rows="3" id="tbx_WhDescript" name="tbx_WhDescript" class="form-control" placeholder="工作說明"></textarea>
							</div>
						</div>
						
						<div class="form-group row">
							<label class="col-lg-2 col-form-label">時間起訖：</label>
							<div class="input-group m-b col-lg-5">
								<input type="text" class="form-control datetimepicker" id="tbx_StartTime" name="tbx_StartTime" value="@ViewBag.now" placeholder="開始時間" required>
								<div class="input-group-append">
									<span class="input-group-addon"> ~ </span>
								</div>
								<input type="text" class="form-control datetimepicker" id="tbx_EndTime" name="tbx_EndTime" placeholder="結束時間" required>
							</div>
						</div>
						<!-- 檔案上傳start-->
						<div class="form-group row" hidden="hidden">
							<div class="col-lg-3 dropzone" id="zone_1">
								<div class="fallback">
									<input name="file" type="file" multiple />
								</div>
							</div>
							<div class="col-lg-9">
								<div class="attachment" id="filezone_1"></div>
								<input type="hidden" class="fileids" id="hid_filezone_1" />
							</div>
						</div>
						<!-- 檔案上傳end-->
						<div class="hr-line-dashed"></div>
						<button class="btn btn-success btn-lg" type="submit"><i class="fa fa-plus"></i> 儲 存 </button>
						<button class="btn btn-primary btn-lg" type="button" onclick="searchCust()">
							<i class="fa fa-search"></i> 查 詢
						</button>
					</form>
				</div>
			</div>
		</div>

		<div class="col-lg-12">
			<div class="ibox ">
				<div class="ibox-title">
					<h5>工時明細</h5>
					<div class="ibox-tools">
						<a class="collapse-link">
							<i class="fa fa-chevron-up"></i>
						</a>
					</div>
				</div>
				<div class="ibox-content" id="dataDiv">
					<table id="table1" class="table table-striple table-bordered table-hover dataTables-example">
						<thead>
							<tr>
								<th>編輯/刪除</th>
								<th>日期</th>
								<th>工時(分)</th>
								<th>工時類型</th>
								<th>任務活動</th>
								<th>專案（商機）</th>
								<th>工作說明</th>
							</tr>
						</thead>
						<tbody>
							@foreach(var bean in ViewBag.beans){
								<tr>
									<td>
									<a class="btn btn-warning" href="javascript:GetWHById(@bean.Id)"><i class="fa fa-pencil"></i></a>
										<a class="btn btn-danger" href="javascript:void()"><i class="fa fa-trash"></i></a>
									</td>
									<td>@bean.StartTime</td>
									<td>@bean.Labor</td>
									<td>@whTypeDict[@bean.Whtype]</td>
									<td>@actTypeDict[@bean.ActType]</td>
									<td>@bean.CrmOppNo</td>
									<td>@bean.WhDescript</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>

	</div>

