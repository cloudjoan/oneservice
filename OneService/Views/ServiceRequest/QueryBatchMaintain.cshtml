		function deleteBatchMaintain(obj, rowId) {
			var cID = parseInt($(obj).closest("tr").find(".taskcID").val());

			if (confirm("確認刪除此筆批次定維派工的明細內容？")) {
				$.ajax({
					url: '@Url.Action("DeleteBatchMaintain", "ServiceRequest")',
					type: 'post',
					dataType: 'json',
					data: {
						cID: cID,
					},
					success: function (result) {
						if (result > 0) {
							alert("刪除成功");
							Query();
						}
						else {
							alert("刪除失敗");
						}
					},
				});
			}
		}

