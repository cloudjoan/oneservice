		//查詢
		function Query() {
			$("#waitingImg").show();

			var tMsg = "";			
			var ddl_cSRCaseType = $("#ddl_cSRCaseType");				//服務案件種類
			var tbx_cStartCreatedDate = $('#tbx_cStartCreatedDate');		//派單起始日期
